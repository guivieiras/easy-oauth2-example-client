{
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module" // Allows for the use of imports
	},
	"rules": {
		"prettier/prettier": ["error"],
		"semi": [2, "never"],
		"no-tabs": "off",
		"quotes": [2, "single"]
	},
	"extends": ["prettier"],
	"plugins": ["prettier"]
}
